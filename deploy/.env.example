# BotMM L2 Recorder — Deployment Configuration

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK

# Recording Config
RECORDER_SYMBOLS=BTC,ETH,SOL
RECORDER_LEVELS=20
RECORDER_OUTPUT_DIR=/home/ec2-user/BotMM/data/orderbook
RECORDER_STATS_INTERVAL=300

# S3 Backup (optional — requires AWS CLI configured)
S3_BUCKET=botmm-orderbook-data
S3_REGION=eu-central-1

# Alerts
ALERT_DISK_THRESHOLD=80
